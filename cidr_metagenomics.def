Bootstrap: docker
From: ubuntu:20.04

%post    
    # Installing base programs
    export DEBIAN_FRONTEND=noninteractive
    export DEBCONF_NONINTERACTIVE_SEEN=true 
    apt-get update && apt-get install -y wget bzip2 build-essential ca-certificates git squashfuse fuse2fs gocryptfs x11-xserver-utils libtiff5 tzdata firefox cmake
    
    # Download and install Miniconda
    wget https://github.com/conda-forge/miniforge/releases/latest/download/Miniforge3-Linux-x86_64.sh
    bash Miniforge3-Linux-x86_64.sh -b -p /opt/conda
    rm Miniforge3-Linux-x86_64.sh
    
    # Initialize mamba and install dependencies    
    /bin/bash -c 'wget https://raw.githubusercontent.com/GSTT-CIDR/metagenomics_workflow/main/conda/cmg.txt'
    /bin/bash -c '/opt/conda/bin/conda init && source /opt/conda/etc/profile.d/conda.sh && mamba create --name cmg --file ./cmg.txt'

    # Centrifuge install
    git clone https://github.com/infphilo/centrifuge
    cd centrifuge
    make
    make install prefix=/usr/local

    # Temporary measure for ingesting pipeline to container - replace with Git pull 
    mkdir -p /workflow
    cp -r /mnt/data/metag_pipeline/workflow/ /


%environment
    /bin/bash -c 'source /opt/conda/etc/profile.d/conda.sh'

%runscript
    /bin/bash -c 'source /opt/conda/etc/profile.d/conda.sh && conda activate cmg && cd /workflow ; python metagenomics_launcher.py'